<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="33dp"
        android:orientation="vertical" >

        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/b_play" android:textSize="22sp" android:textStyle="bold" android:background="@drawable/button"></Button>
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/b_stats" android:textSize="22sp" android:textStyle="bold" android:background="@drawable/button"></Button>
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/b_follow" android:textSize="22sp" android:textStyle="bold" android:background="@drawable/button"></Button>

        <Button
            android:id="@+id/b_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b_countdown"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

     <ImageView
         android:id="@+id/iv_torch"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_toRightOf="@+id/linearLayout1"
         android:src="@drawable/torch1" />
    
</RelativeLayout>